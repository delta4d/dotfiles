! Fast Start
URxvt.preeditType:Root

! Set as Login Shell
URxvt*loginShell:true

! Background
URxvt.depth:32
URxvt.background:[95]#000000
URxvt.foreground:#ffffff

! Font
URxvt*font:xft:Bitstream Vera Sans Mono for Powerline:antialias=True:pixelsize=12,xft:文泉驿等宽微米黑:size=10

! xft settings
Xft*dpi:96
Xft*antialias:True
Xft*hinting:Full

! Tabs
!URxvt.perl-ext-common:default,tabbed
!URxvt.tabbed.tabbar-fg:2
!URxvt.tabbed.tabbar-bg:0
!URxvt.tabbed.tab-fg:3
!URxvt.tabbed.tab-bg:0

! Scrollbar
URxvt.scrollBar:false

! Scrollpage
URxvt.mouseWheelScrollPage:True
URxvt.scrollWithBuffer:True
URxvt.saveLines:3000

! Copy/Paste & URL handling
URxvt.perl-ext-sommon:default,clipboard,matcher,keyboard-select
URxvt.keysym.M-u:perl:url-select:select_next
URxvt.urlLancher:/usr/bin/google-chrome
URxvt.underlineURLs:True
URxvt.matcher.button:1
URxvt.keysym.M-Escape:perl:keyboard-selsect:activate
URxvt.keysym.M-c:perl:clipboard:copy
URxvt.keysym.M-v:perl:clipboard:paste
URxvt.keysym.M-C-v:perl:clipboard:paste_escaped

!! xterm
xterm*background: black
xterm*foreground: grey
xterm*locale: true
xterm*xftAntialias: true
XTerm*faceName: Bitstream Vera Sans Mono for Powerline:antialias=True:pixelsize=12

! X Cursor Theme
Xcursor.theme: Comix Cursor original Black Regular Slim
!Xcursor.size: 16
